            <div class="content-wrapper">
                <h2>REGISTER USER</h2>
                <div class="container-fluid">
                    <form action="">
                        <div class="form-group">
                          <label for="name">Name:</label>
                          <input type="name" class="form-control" placeholder="Enter name" id="user-name">
                        </div>
                        <div class="form-group">
                            <label for="sex">Sex:</label>
                            <select id="user-sex">
                                <option value="Female">Female</option>
                                <option value="Male">Male</option>
                            </select>
                        </div>
                        <div class="form-group">
                          <label for="email">Email:</label>
                          <input type="email" class="form-control" placeholder="Enter email" id="user-email">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone number:</label>
                            <input type="number" class="form-control" placeholder="Enter phone number" id="user-phone">
                        </div>
                        
                        <div class="form-group">
                            <label for="role">Role:</label>
                            <select id="user-role">
                                <option value="Admin">Admin</option>
                                <option value="Facilitator">Facilitator</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-orange" id="register-user-btn">Submit</button>
                      
                      </form> 
                      
                        <div class="user-info">
                            <h3>Registered Users</h3>
                            <table class="user-table">
                                <thead>
                                    <tr>
                                        <th>#Id</th>
                                        <th>Name</th>
                                        <th>Sex</th>
                                        <th>Email</th>
                                        <th>Phone Numer</th>
                                        <th>Role</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody class="user-display-area"></tbody>
                            </table>
                
                        </div>
                      
                    
                    <div class="line"></div>
                </div>
            </div>
        </div>
